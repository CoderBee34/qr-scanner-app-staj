@page
@model qr_scanner_app_staj.Pages.qr_scanner.IndexModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Login</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="User.username">Username</label>
                    <input type="text" class="form-control" asp-for="User.username" required />
                </div>
                <div class="form-group">
                    <label asp-for="User.password">Password</label>
                    <input type="password" class="form-control" asp-for="User.password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
        </div>
    </div>
</div>