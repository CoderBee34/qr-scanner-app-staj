@page
@model qr_scanner_app_staj.Pages.qr_scanner.IndexModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Login</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="User.username">Username</label>
                    <input type="text" class="form-control" asp-for="User.username" required />
                </div>
                <div class="form-group">
                    <label asp-for="User.password">Password</label>
                    <input type="password" class="form-control" asp-for="User.password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
                <a class="btn btn-primary btn-block" asp-page="CreateUser">Register</a>
            </form>
            @if (TempData["ErrorMessage"] != null)
            {
                <div id="error-message" style="display:none;">
                    @TempData["ErrorMessage"]
                </div>
            }

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var errorMessageDiv = document.getElementById("error-message");
                    if (errorMessageDiv) {
                        alert(errorMessageDiv.innerText);
                    }
                });
            </script>
        </div>
    </div>
</div>