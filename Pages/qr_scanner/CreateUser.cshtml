@page
@model qr_scanner_app_staj.Pages.qr_scanner.CreateUser


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Register</h2>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="FormModel.Username">Username</label>
                    <input type="text" class="form-control" asp-for="FormModel.Username" required />
                </div>
                <div class="form-group">
                    <label asp-for="FormModel.Password">Password</label>
                    <input type="password" class="form-control" asp-for="FormModel.Password" required />
                </div>
                <div class="form-group">
                    <label asp-for="FormModel.RePassword">RePassword</label>
                    <input type="password" class="form-control" asp-for="FormModel.RePassword" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
        </div>
    </div>
</div>